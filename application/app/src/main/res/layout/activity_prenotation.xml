<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Aprenotation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Prenotation">

    <TextView
        android:id="@+id/txtHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="421dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/proximanovasoftbold"
        android:text="Clicca sulla data dell'open day!"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
        android:visibility="visible" />

    <android.support.design.widget.BottomNavigationView
        android:theme="@style/BottomTheme"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        android:foreground="?attr/selectableItemBackground"
        app:itemIconTint="@drawable/bottom_navigation_style"
        app:itemTextColor="@drawable/bottom_navigation_style"
        app:menu="@menu/bottom_navigation"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbtnFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="74dp"
        android:clickable="true"
        app:backgroundTint="@color/white"
        app:showAsAction="ifRoom"
        app:srcCompat="@drawable/op_primo" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbtnSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="74dp"
        android:clickable="true"
        app:backgroundTint="@color/white"
        app:showAsAction="ifRoom"
        app:srcCompat="@drawable/op_secondo" />

    <TextView
        android:id="@+id/txtPr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/proximanovasoftbold"
        android:textSize="@dimen/fontAll"
        android:text="Prenota il tuo"
        app:showAsAction="ifRoom"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/proximanovasoftbold"
        android:text="Open"
        app:showAsAction="ifRoom"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
        android:textColor="@color/colorOpen"
        android:textSize="@dimen/sizeOpenDay"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="89dp"
        android:fontFamily="@font/proximanovasoftbold"
        android:text="Day"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
        android:textColor="@color/colorDay"
        android:textSize="@dimen/sizeOpenDay"
        android:visibility="visible"
        app:showAsAction="ifRoom" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fbtnFirst"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/proximanovasoftbold"
        android:text="Dicembre"
        app:showAsAction="ifRoom"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="76dp"
        android:fontFamily="@font/proximanovasoftbold"
        android:text="Gennaio"
        app:showAsAction="ifRoom"
        android:visibility="visible" />


</RelativeLayout>