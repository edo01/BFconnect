<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AprogettiTecnico"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.School">

    <include layout="@layout/toolbar"
        android:id="@+id/mytoolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:layout_below="@+id/mytoolbar"
        android:id="@+id/scrolling">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <android.support.v7.widget.CardView
                android:id="@+id/cwDesi"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp">
                <!-- Inserire detro CardView anche lo sfondo -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/desi_banner">

                    <TextView
                        android:id="@+id/titleCV1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="17dp"
                        android:layout_marginBottom="36dp"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:text="DESI"
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/subTitleCV1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleCV1"
                        android:layout_alignStart="@+id/titleCV1"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-36dp"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:textColor="@color/white"
                        android:text="Progetto DESI - DUCATI" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cwMast"
                android:layout_width="match_parent"
                android:layout_below="@+id/cwDesi"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mast_banner">

                    <TextView
                        android:id="@+id/titleCV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginBottom="36dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:text="MAST."
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/subTitleCV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleCV2"
                        android:layout_alignStart="@+id/titleCV2"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-36dp"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:textColor="@color/white"
                        android:text="Expeditions" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cwCarpigiani"
                android:layout_width="match_parent"
                android:layout_below="@+id/cwMast"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">
                <!-- Inserire detro CardView anche lo sfondo -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/carp_banner">

                    <TextView
                        android:id="@+id/titleCV3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginBottom="36dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:text="Carpigiani"
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/subTitleCV3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleCV3"
                        android:layout_alignStart="@+id/titleCV3"
                        android:layout_marginStart="0dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="-36dp"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:text="Progetto Frigotronica - Carpigiani Group" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cwOpus"
                android:layout_width="match_parent"
                android:layout_below="@+id/cwCarpigiani"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">
                <!-- Inserire detro CardView anche lo sfondo -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/of_banner">

                    <TextView
                        android:id="@+id/titleCV4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="17dp"
                        android:layout_marginBottom="36dp"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:text="Opus Facere"
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/subTitleCV4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleCV4"
                        android:layout_alignStart="@+id/titleCV4"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-36dp"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:text="Fare per capire"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cwFilosofia"
                android:layout_width="match_parent"
                android:layout_below="@+id/cwOpus"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">
                <!-- Inserire detro CardView anche lo sfondo -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/filo_banner">

                    <TextView
                        android:id="@+id/titleCV5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginBottom="36dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:text="Filosofia"
                        android:textColor="@color/black"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/subTitleCV5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleCV5"
                        android:layout_alignStart="@+id/titleCV5"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-36dp"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:text="Biennio - Filosofia" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cwTexa"
                android:layout_width="match_parent"
                android:layout_below="@+id/cwFilosofia"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">
                <!-- Inserire detro CardView anche lo sfondo -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/texa_banner">

                    <TextView
                        android:id="@+id/titleCV6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="17dp"
                        android:layout_marginBottom="36dp"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:text="TEXA"
                        android:textColor="@color/black"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/subTitleCV6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleCV6"
                        android:layout_alignStart="@+id/titleCV6"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-36dp"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:text="Automotive Diagnostic Training" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cwStem"
                android:layout_width="match_parent"
                android:layout_below="@+id/cwTexa"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">
                <!-- Inserire detro CardView anche lo sfondo -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/stem_banner">

                    <TextView
                        android:id="@+id/titleCV7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="17dp"
                        android:layout_marginBottom="36dp"
                        android:fontFamily="@font/proximanovasoftbold"
                        android:textColor="@color/black"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/subTitleCV7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleCV7"
                        android:layout_alignStart="@+id/titleCV7"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-36dp"
                        android:fontFamily="@font/proximanovasoftbold">

                    </TextView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>