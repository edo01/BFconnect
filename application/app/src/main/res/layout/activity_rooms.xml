<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <include layout="@layout/toolbar"
        android:id="@+id/mytoolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mytoolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Title"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/proximanovasoftbold"
                android:textSize="35sp"
                android:textColor="@color/black"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/photos"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="250dp"
                android:layout_below="@+id/titleRoom"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageOne"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageTwo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageThree"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageFour"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageFive"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageSix"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </HorizontalScrollView>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/contentTitle"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photos"
                android:fontFamily="@font/proximanovasoftbold"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:text="Descrizione"/>
            <TextView
                android:layout_below="@+id/contentTitle"
                android:id="@+id/content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>